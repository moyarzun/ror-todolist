<% @task.errors.full_messages.each do |message| %>
  <div class="alert alert-danger" role="alert">
    <%= message %>
  </div>
<% end %>

<h1>Nueva Tarea</h1>

<%= form_for(@task) do |t| %>
<div class="row">
  <div class="col-md">
    <%= t.text_field :task, placeholder: "Tarea", class:"form-control" %>
  </div>
</div>
<div class="row">
  <div class="col-md">
    <%= t.submit "Crear", class:"btn btn-success" %>
  </div>
</div>
<% end %>
